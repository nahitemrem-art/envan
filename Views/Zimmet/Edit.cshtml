@model EnvanterTakip.Models.Zimmet

@{
    ViewData["Title"] = "Zimmet Düzenle";
    var cihazlar = ViewBag.Cihazlar as List<EnvanterTakip.Models.Cihaz>;
    var Personeller = ViewBag.Personeller as List<EnvanterTakip.Models.Personel>;
}

<h2>Zimmet Düzenle</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ZimmetID" />

    <div class="form-group">
        <label asp-for="CihazID" class="control-label">Cihaz</label>
        <select asp-for="CihazID" class="form-control" asp-items="@(new SelectList(ViewBag.Cihazlar, "CihazID", "MarkaModelSeriNo"))">
            <option value="">-- Cihaz Seçin --</option>
        </select>
        <span asp-validation-for="CihazID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PersonelID" class="control-label">Personel</label>
        <select asp-for="PersonelID" class="form-control" asp-items="@(new SelectList(ViewBag.Personeller, "PersonelID", "DisplayText"))">
            <option value="">-- Personel Seçin --</option>
        </select>
        <span asp-validation-for="PersonelID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ZimmetTarihi" class="control-label">Zimmet Tarihi</label>
        <input asp-for="ZimmetTarihi" type="date" class="form-control" />
        <span asp-validation-for="ZimmetTarihi" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IadeTarihi" class="control-label">İade Tarihi (Opsiyonel)</label>
        <input asp-for="IadeTarihi" type="date" class="form-control" />
        <span asp-validation-for="IadeTarihi" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Aciklama" class="control-label">Açıklama</label>
        <textarea asp-for="Aciklama" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Aciklama" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Kaydet" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}