@model EnvanterTakip.Models.Zimmet

@{
    ViewData["Title"] = "Yeni Zimmet Oluştur";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="CihazID" class="control-label">Cihaz</label>
        @if (ViewBag.Cihazlar != null)
        {
            @Html.DropDownListFor(model => model.CihazID, 
                new SelectList(ViewBag.Cihazlar, "CihazID", "MarkaModelSeriNo"), 
                "-- Cihaz Seçin --", new { @class = "form-control" })
        }
        <span asp-validation-for="CihazID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PersonelID" class="control-label">Personel</label>
        @if (ViewBag.Personeller != null)
        {
            @Html.DropDownListFor(model => model.PersonelID, 
                new SelectList(ViewBag.Personeller, "PersonelID", "DisplayText"), 
                "-- Personel Seçin --", new { @class = "form-control" })
        }
        <span asp-validation-for="PersonelID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ZimmetTarihi" class="control-label">Zimmet Tarihi</label>
        <input asp-for="ZimmetTarihi" type="date" class="form-control" 
               value="@DateTime.Now.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="ZimmetTarihi" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IadeTarihi" class="control-label">İade Tarihi (Opsiyonel)</label>
        <input asp-for="IadeTarihi" type="date" class="form-control" />
        <span asp-validation-for="IadeTarihi" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Aciklama" class="control-label">Açıklama</label>
        <textarea asp-for="Aciklama" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Aciklama" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Oluştur" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Tarih inputları için ek kontroller
        document.addEventListener('DOMContentLoaded', function() {
            const zimmetTarihi = document.querySelector('#ZimmetTarihi');
            const iadeTarihi = document.querySelector('#IadeTarihi');
            
            // İade tarihi zimmet tarihinden önce olamaz
            iadeTarihi.addEventListener('change', function() {
                if (new Date(this.value) < new Date(zimmetTarihi.value)) {
                    alert('İade tarihi zimmet tarihinden önce olamaz!');
                    this.value = '';
                }
            });
        });
    </script>
}
