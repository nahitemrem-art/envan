@model IEnumerable<EnvanterTakip.Models.Personel>

<h2>Personel Listesi</h2>

<div class="row">
    <div class="col-md-6">
        <a asp-action="Create" class="btn btn-primary">Yeni Personel Ekle</a>
    </div>
    <div class="col-md-6">
        <form asp-action="Index" method="get" class="form-inline float-md-right">
            <div class="input-group">
                <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Ara...">
                <div class="input-group-append">
                    <button type="submit" class="btn btn-secondary ml-1">Ara</button>
                </div>
            </div>
            
        </form>
    </div>
</div>
<br />

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Ad</th>
                <th>Soyad</th>
                <th>Birim</th>
                <th>E-posta</th>
                <th>Telefon</th>
                <th>Durum</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Ad</td>
                    <td>@item.Soyad</td>
                    <td>@item.BirimAdi</td>
                    <td>@item.Email</td>
                    <td>@item.Telefon</td>
                    <td>@(item.AktifMi ? "Aktif" : "Pasif")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.PersonelID" class="btn btn-sm btn-warning">DÃ¼zenle</a>
                        <a asp-action="Delete" asp-route-id="@item.PersonelID" class="btn btn-sm btn-danger">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
