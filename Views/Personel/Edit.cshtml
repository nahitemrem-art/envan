@model EnvanterTakip.Models.Personel

@{
    ViewData["Title"] = "Personel Düzenle";
}

<h2>Personel Düzenle</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="PersonelID" />
    
    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="Ad" class="form-label">Ad</label>
                <input asp-for="Ad" class="form-control" placeholder="Personel adını giriniz" />
                <span asp-validation-for="Ad" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="Soyad" class="form-label">Soyad</label>
                <input asp-for="Soyad" class="form-control" placeholder="Personel soyadını giriniz" />
                <span asp-validation-for="Soyad" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="BirimAdi" class="form-label">Birim Adı</label>
                <input asp-for="BirimAdi" class="form-control" placeholder="Çalıştığı birimi giriniz" />
                <span asp-validation-for="BirimAdi" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="Email" class="form-label">E-posta</label>
                <input asp-for="Email" type="email" class="form-control" placeholder="ornek@email.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="Telefon" class="form-label">Telefon</label>
                <input asp-for="Telefon" type="tel" class="form-control" placeholder="0555 123 45 67" />
                <span asp-validation-for="Telefon" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-3">
                <div class="form-check mt-4">
                    <input asp-for="AktifMi" class="form-check-input" type="checkbox" />
                    <label asp-for="AktifMi" class="form-check-label">
                        Aktif Personel
                    </label>
                </div>
                <span asp-validation-for="AktifMi" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-save"></i> Kaydet
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Geri Dön
        </a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
