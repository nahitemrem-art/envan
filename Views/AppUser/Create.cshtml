@model EnvanterTakip.Models.AppUser

@{
    ViewData["Title"] = "Kullan覺c覺 Ekle";
}

<h2>Kullan覺c覺 Ekle</h2>
<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="KullaniciAdi" class="form-label"></label>
        <input asp-for="KullaniciAdi" class="form-control" required />
    </div>
