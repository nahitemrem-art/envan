@using EnvanterTakip.Models
@model IEnumerable<Cihaz>

@{
    ViewData["Title"] = "Cihaz Listesi";
}


<h2>@ViewData["Title"]</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Cihaz Ekle</a>
</p>
<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Tür</th>
                <th>Marka</th>
                <th>Model</th>
                <th>Seri No</th>
                <th>Durum</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CihazID</td>
                    <td>@item.CihazTuru</td>
                    <td>@item.Marka</td>
                    <td>@item.Model</td>
                    <td>@item.SeriNo</td>
                    <td>@item.Durum</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.CihazID" class="btn btn-sm btn-warning">Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@item.CihazID" class="btn btn-sm btn-danger">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>