@model EnvanterTakip.Models.Cihaz

@{
    ViewData["Title"] = "Cihaz Düzenle";
}

<h2>Cihaz Düzenle</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="CihazID" />
    <div class="mb-3">
        <label asp-for="CihazTuru" class="form-label"></label>
        <input asp-for="CihazTuru" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Marka" class="form-label"></label>
        <input asp-for="Marka" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Model" class="form-label"></label>
        <input asp-for="Model" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="SeriNo" class="form-label"></label>
        <input asp-for="SeriNo" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="AlimTarihi" class="form-label"></label>
        <input asp-for="AlimTarihi" type="date" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="GarantiBitisTarihi" class="form-label"></label>
        <input asp-for="GarantiBitisTarihi" type="date" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Aciklama" class="form-label"></label>
        <input asp-for="Aciklama" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Durum" class="form-label"></label>
        <input asp-for="Durum" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>